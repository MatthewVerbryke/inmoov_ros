<?xml version="1.0"?>

<robot name="inmoov" xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:include filename="$(find inmoov_description)/urdf/materials.urdf.xacro" />

<xacro:macro name="torso" params="side covers">


  <link name="mid_stomach">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/mid_stomach.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 1.152"/>
      <xacro:frame_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/mid_stomach.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 1.152"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 1.152"/>
      <mass value="0.75"/>
      <inertia ixx="0.0130"  ixy="0"  ixz="0" iyy="0.0271" iyz="0" izz="0.0294" />
    </inertial>
  </link>


  <link name="disk">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/disk.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.046 0"/>
      <xacro:cover_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/disk.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0.046 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0.046 0"/>
      <mass value="0.0976"/>
      <inertia ixx="0.0001"  ixy="0"  ixz="0" iyy="0.0002" iyz="0" izz="0.0001" />
    </inertial>
  </link>


  <link name="top_stomach">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/top_stomach.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <xacro:frame_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/top_stomach.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.75"/>
      <inertia ixx="0.0099"  ixy="0"  ixz="0" iyy="0.0119" iyz="0" izz="0.0122" />
    </inertial>
  </link>


  <link name="torso">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/torso.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <xacro:frame_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/torso.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="5.95"/>
      <inertia ixx="0.0682"  ixy="0"  ixz="0" iyy="0.0808" iyz="0" izz="0.0218" />
    </inertial>
  </link>


  <link name="kinect">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/kinectone.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <xacro:kinect_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/kinectone.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1.3"/>
      <inertia ixx="0.0083"  ixy="0"  ixz="0" iyy="0.0634" iyz="0" izz="0.0644" />
    </inertial>
  </link>


  <link name="chestplate">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/chest.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <xacro:cover_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/chest.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.07"/>
      <inertia ixx="0.0024"  ixy="0"  ixz="0" iyy="0.0047" iyz="0" izz="0.0024" />
    </inertial>
  </link>


  <joint name="waist_rotate" type="revolute">
   <axis xyz="0 0 1"/>
   <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
   <origin rpy="0 0 0" xyz="0 0 1.152"/>
   <parent link="mid_stomach"/>
   <child link="top_stomach"/>
   <dynamics damping="0.7"/>
  </joint>


  <joint name="disk" type="fixed">
   <origin rpy="0 0 0" xyz="0 0 0.09"/>
   <parent link="top_stomach"/>
   <child link="disk"/>
  </joint>


  <joint name="waist_lean" type="revolute">
   <axis xyz="0 1 0"/>
   <limit effort="1000.0" lower="-0.30" upper="0.30" velocity="0.5"/>
   <origin rpy="0 0 0" xyz="0 0 0.11"/>
   <parent link="top_stomach"/>
   <child link="torso"/>
   <dynamics damping="0.7"/>
  </joint>


  <joint name="chestplate" type="fixed">
    <origin rpy="0 0 0" xyz="0 0.039 0.025"/>
    <parent link="torso"/>
    <child link="chestplate"/>
  </joint>


  <joint name="kinect" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.066"/>
    <parent link="torso"/>
    <child link="kinect"/>
  </joint>


</xacro:macro>

</robot>
