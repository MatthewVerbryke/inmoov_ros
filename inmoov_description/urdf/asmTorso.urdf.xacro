<?xml version="1.0"?>

<robot name="inmoov" xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:include filename="$(find inmoov_description)/urdf/materials.urdf.xacro" />

<xacro:macro name="torso" params="side covers">


  <link name="mid_stomach">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/mid_stomach.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 1.152"/>
      <xacro:frame_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/mid_stomach.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 1.152"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0.002 1.207"/>
      <mass value="7.5e-1"/>
      <inertia ixx="1.2953e-2"  ixy="0"  ixz="0" iyy="2.7058e-2" iyz="0" izz="2.9405e-2" />
    </inertial>
  </link>


  <link name="disk">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/disk.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.046 0"/>
      <xacro:cover_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/disk.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0.046 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0.067 0"/>
      <mass value="9.7555e-2"/>
      <inertia ixx="1.39e-4"  ixy="0"  ixz="0" iyy="2.72e-4" iyz="0" izz="1.41e-4" />
    </inertial>
  </link>


  <link name="top_stomach">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/top_stomach.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <xacro:frame_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/top_stomach.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 -0.008 0.055"/>
      <mass value="7.5e-1"/>
      <inertia ixx="9.943e-3"  ixy="0"  ixz="0" iyy="1.1935e-2" iyz="0" izz="1.2213e-2" />
    </inertial>
  </link>


  <link name="torso">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/torso.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <xacro:frame_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/torso.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0.013 0.232"/>
      <mass value="4.25"/>
      <inertia ixx="6.8154e-2"  ixy="0"  ixz="0" iyy="8.0772e-2" iyz="0" izz="2.1806e-2" />
    </inertial>
  </link>


  <link name="kinect">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/kinectone.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <xacro:kinect_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/kinectone.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0.061 0.044"/>
      <mass value="1.3"/>
      <inertia ixx="8.329e-3"  ixy="0"  ixz="0" iyy="6.3423e-2" iyz="0" izz="6.4413e-2" />
    </inertial>
  </link>


  <link name="chestplate">
    <visual>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/chest.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <xacro:cover_color/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://inmoov_description/meshes/chest.stl" scale="0.001 0.001 0.001"/>
      </geometry> 
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0.022 0.182"/>
      <mass value="7e-2"/>
      <inertia ixx="2.446e-3"  ixy="0"  ixz="0" iyy="4.703e-3" iyz="0" izz="2.387e-3" />
    </inertial>
  </link>


  <joint name="waist_rotate" type="revolute">
   <axis xyz="0 0 1"/>
   <limit effort="2.422" lower="-1.57" upper="1.57" velocity="7.48"/>
   <origin rpy="0 0 0" xyz="0 0 1.152"/>
   <parent link="mid_stomach"/>
   <child link="top_stomach"/>
   <dynamics damping="0.7"/>
  </joint>


  <joint name="disk" type="fixed">
   <origin rpy="0 0 0" xyz="0 0 0.09"/>
   <parent link="top_stomach"/>
   <child link="disk"/>
  </joint>


  <joint name="waist_lean" type="revolute">
   <axis xyz="0 1 0"/>
   <limit effort="2.422" lower="-0.30" upper="0.30" velocity="7.48"/>
   <origin rpy="0 0 0" xyz="0 0 0.11"/>
   <parent link="top_stomach"/>
   <child link="torso"/>
   <dynamics damping="0.7"/>
  </joint>


  <joint name="chestplate" type="fixed">
    <origin rpy="0 0 0" xyz="0 0.039 0.025"/>
    <parent link="torso"/>
    <child link="chestplate"/>
  </joint>


  <joint name="kinect" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.066"/>
    <parent link="torso"/>
    <child link="kinect"/>
  </joint>


</xacro:macro>

</robot>
